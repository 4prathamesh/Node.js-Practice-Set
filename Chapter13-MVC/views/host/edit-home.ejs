<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen">

  <%- include('../partials/header') %>

  <!-- Main Content -->
  <main class="flex flex-col items-center justify-center mt-16 px-4">
    <h1 class="text-3xl font-bold text-gray-700 mb-8">
      <%= editing ? 'Edit' : 'Register' %> your home üè†
    </h1>

    <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST"
      class="bg-white p-8 rounded-xl shadow-md w-full max-w-md space-y-5 border border-gray-100">

      <div class="flex flex-col gap-1">
        <input type="hidden" name="id" id="id" value="<%= editing ? home.id : '' %>">
        <label for="houseName" class="text-gray-700 font-medium">
          Home Name
        </label>
        <input type="text" name="houseName" id="houseName"
          value="<%= editing ? home.houseName : '' %>"
          placeholder="Enter your home name"
          class="p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
          required />

        <input type="text" name="price" id="price"
          value="<%= editing ? home.price : '' %>"
          placeholder="Price Per Night"
          class="p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
          required />

        <input type="text" name="location" id="location"
          value="<%= editing ? home.location : '' %>"
          placeholder="Enter The location"
          class="p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
          required />

        <input type="text" name="rating" id="rating"
          value="<%= editing ? home.rating : '' %>"
          placeholder="Rating"
          class="p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
          required />

        <input type="text" name="photoUrl" id="photoUrl"
          value="<%= editing ? home.photoUrl : '' %>"
          placeholder="Enter Photo URL"
          class="p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
          required />
      </div>

      <button type="submit"
        class="bg-orange-500 text-white w-full p-3 rounded-md font-semibold hover:bg-orange-600 transition duration-200 shadow-md">
        <%= editing ? 'Update Home' : 'Add Home' %>
      </button>
    </form>
  </main>

</body>

</html>
