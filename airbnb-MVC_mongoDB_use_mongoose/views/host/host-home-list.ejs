<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="container mx-auto mt-12">
        <h1 class="text-4xl font-bold text-center text-red-600 mb-10">
            Here are Host Home Listings
        </h1>

        <!-- Home Listing Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-4">
            <% registeredHome.forEach(home => { %>
                <div class="bg-white shadow-md rounded-xl p-5 hover:shadow-xl duration-300">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">
                        <%= home.houseName %>
                    </h2>
                    <p class="text-gray-600 text-sm">
                        Location: <%= home.location || 'Not specified' %>
                    </p>
                    <p class="text-gray-600 text-sm">
                        Price: <%= home.price ? '₹ ' + home.price : 'N/A' %>
                    </p>
                    <div class="flex justify-between">
                        <a href="/host/edit-home/<%=home._id%>?editing=true" class="bg-blue-500 p-2 ">Edit</a>
                        
                        <form action="/host/delete-home/<%=home._id%>" method="POST">
                            <button class="bg-red-500 p-2 " type="submit">Delete</button>
                        </form>
                        <div class="">
                            <a href="#"
                            class="text-orange-600 font-semibold hover:text-orange-700 duration-200">
                            View Details →
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</body>

</html>
