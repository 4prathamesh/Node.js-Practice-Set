<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="container mx-auto mt-12">
        <h1 class="text-4xl font-bold text-center text-red-600 mb-10">
            Here are Host Home Listings
        </h1>

        <!-- Home Listing Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-4">
            <% registeredHome.forEach(home => { %>
                <div class="bg-white shadow-md rounded-xl p-5 hover:shadow-xl duration-300">
                    <% if (home.photoUrl) { %>
                        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-lg mb-4">
                    <% } %>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">
                        <%= home.houseName %>
                    </h2>
                    <p class="text-gray-600 text-sm">
                        Location: <%= home.location || 'Not specified' %>
                    </p>
                    <p class="text-gray-600 text-sm">
                        Price: <%= home.price ? '₹ ' + home.price : 'N/A' %>
                    </p>
                    <p class="text-gray-600 text-sm">
                        Rating: <%= home.rating || 'N/A' %> ⭐
                    </p>
                    <div class="flex flex-col sm:flex-row justify-between items-center gap-2 mt-4">
                        <a href="/host/edit-home/<%=home._id%>?editing=true" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-200 text-sm font-medium">Edit</a>
                        
                        <form action="/host/delete-home/<%=home._id%>" method="POST" class="inline">
                            <button class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-200 text-sm font-medium" type="submit">Delete</button>
                        </form>

                        <a href="/home/<%= home._id %>"
                            class="text-orange-600 font-semibold hover:text-orange-700 duration-200 text-sm">
                            View Details →
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</body>

</html>
