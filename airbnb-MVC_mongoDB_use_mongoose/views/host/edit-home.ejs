<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen">

  <%- include('../partials/header') %>

  <!-- Main Content -->
  <main class="flex flex-col items-center justify-center mt-16 px-4">
    <h1 class="text-3xl font-bold text-gray-700 mb-8">
      <%= editing ? 'Edit' : 'Register' %> your home üè†
    </h1>

    <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data"
      class="bg-white p-8 rounded-xl shadow-md w-full max-w-md space-y-5 border border-gray-100">

      <div class="flex flex-col gap-4">
        <input type="hidden" name="id" id="id" value="<%= editing ? home._id : '' %>">
        <div>
          <label for="houseName" class="block text-gray-700 font-medium mb-2">
            Home Name
          </label>
          <input type="text" name="houseName" id="houseName"
            value="<%= editing ? home.houseName : '' %>"
            placeholder="Enter your home name"
            class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
            required />
        </div>

        <div>
          <label for="price" class="block text-gray-700 font-medium mb-2">
            Price Per Night
          </label>
          <input type="number" name="price" id="price"
            value="<%= editing ? home.price : '' %>"
            placeholder="Price Per Night"
            class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
            required />
        </div>

        <div>
          <label for="location" class="block text-gray-700 font-medium mb-2">
            Location
          </label>
          <input type="text" name="location" id="location"
            value="<%= editing ? home.location : '' %>"
            placeholder="Enter The location"
            class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
            required />
        </div>

        <div>
          <label for="rating" class="block text-gray-700 font-medium mb-2">
            Rating
          </label>
          <input type="number" name="rating" id="rating"
            value="<%= editing ? home.rating : '' %>"
            placeholder="Rating"
            class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
            required />
        </div>
        
        <div>
          <label for="description" class="block text-gray-700 font-medium mb-2">
            Description
          </label>
          <textarea name="description" id="description"
            placeholder="Enter Description"
            class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400"
            required ><%= editing ? home.description : '' %></textarea>
        </div>

        <div class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400">
          <input type="file" name="photo" id="photo"
            class=" bg-gray-700 text-black rounded-md cursor-pointer w-full"
            />
        </div>
      </div>

      <button type="submit"
        class="bg-orange-500 text-white w-full p-3 rounded-md font-semibold hover:bg-orange-600 transition duration-200 shadow-md">
        <%= editing ? 'Update Home' : 'Add Home' %>
      </button>
    </form>
  </main>

</body>

</html>
