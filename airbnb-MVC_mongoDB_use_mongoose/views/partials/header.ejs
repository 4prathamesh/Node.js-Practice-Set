<!-- Navbar -->
<nav class="bg-orange-500 text-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">

    <!-- Top bar -->
    <div class="flex justify-between items-center h-16">

      <!-- Logo -->
      <a href="/" class="text-2xl font-bold tracking-wide">
        Airbnb<span class="text-yellow-300">a</span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-4">

        <% if(isLoggedIn) { 
            if(user.role ==='guest' ){ %>
              <a href="/home" class="px-4 py-2 rounded transition
                  <%= currentPage === 'Home' ? 'bg-red-500' : 'hover:bg-red-500' %>">
                Home List
              </a>

              <a href="/bookings" class="px-4 py-2 rounded transition
                  <%= currentPage === 'bookings' ? 'bg-red-500' : 'hover:bg-red-500' %>">
                Bookings
              </a>

              <a href="/favourites" class="px-4 py-2 rounded transition
                  <%= currentPage === 'favourites' ? 'bg-red-500' : 'hover:bg-red-500' %>">
                Favourites
              </a>
            <% } else { %>
                <a href="/host/host-home-list"
                  class="px-4 py-2 rounded transition
                  <%= currentPage === 'host-home' ? 'bg-red-500' : 'hover:bg-red-500' %>">
                  Host Homes
                </a>

                <a href="/host/add-home"
                  class="px-4 py-2 rounded transition
                  <%= currentPage === 'addHome' ? 'bg-red-500' : 'hover:bg-red-500' %>">
                  Add Home
                </a>
            <% } %>

          <a href="/auth/logout"
             class="px-4 py-2 rounded bg-red-600 hover:bg-red-700 transition
             <%= currentPage === 'logout' ? 'bg-red-500' : 'hover:bg-red-500' %>">
            Logout
          </a>

        <% } else { %>
          <a href="/auth/singup"
             class="px-4 py-2 rounded bg-red-600 hover:bg-red-700 transition
             <%= currentPage === 'singup' ? 'bg-red-500' : 'hover:bg-red-500' %>">
            Sing Up
          </a>

          <a href="/auth/login"
             class="px-4 py-2 rounded bg-red-600 hover:bg-red-700 transition
             <%= currentPage === 'login' ? 'bg-red-500' : 'hover:bg-red-500' %>">
            Login
          </a>

        <% } %>
      </div>

      <!-- Mobile Button -->
      <button id="mobile-menu-button"
              class="md:hidden p-2 rounded hover:bg-orange-600 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu"
         class="md:hidden hidden bg-orange-500 border-t border-orange-400">

      <div class="flex flex-col space-y-2 py-4">

        <% if(isLoggedIn) { 
            if(user.role === 'guest'){
          %>

            <a href="/home"
              class="px-4 py-3 rounded transition
              <%= currentPage === 'Home' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Home List
            </a>

            <a href="/bookings"
              class="px-4 py-3 rounded transition
              <%= currentPage === 'bookings' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Bookings
            </a>

            <a href="/favourites"
              class="px-4 py-3 rounded transition
              <%= currentPage === 'favourites' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Favourites
            </a>
            <% } else { %>
            <a href="/host/host-home-list"
              class="px-4 py-3 rounded transition
              <%= currentPage === 'host-home' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Host Homes
            </a>

            <a href="/host/add-home"
              class="px-4 py-3 rounded transition
              <%= currentPage === 'addHome' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Add Home
            </a>
            <% } %>

            <a href="/auth/logout"
              class="px-4 py-3 rounded bg-red-600 hover:bg-red-700 transition text-center">
              Logout
            </a>

        <% } else { %>

            <a href="/auth/singup"
              class="px-4 py-3 rounded transition 
              <%= currentPage === 'singup' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Sing Up
            </a>

            <a href="/auth/login"
              class="px-4 py-3 rounded transition 
              <%= currentPage === 'login' ? 'bg-red-500' : 'hover:bg-red-500' %>">
              Login
            </a>

        <% } %>

      </div>
    </div>

  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>